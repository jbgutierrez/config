export EDITOR='/usr/bin/mate -w'
export PROJECTS_FOLDER=$HOME/Projects

# Adding an appropriate PATH variable for use with Homebrew
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# User utilities
export PATH=./bin:~/bin:$PATH

# Adding an appropriate MANPATH variable for use with Homebrew
export MANPATH=/usr/local/share/man:$MANPATH

export VIMHOME=~/.vim

# Cygwin customizations and walkarounds
if [ $_YAP_CYGWIN ]; then
  # cygwin settings
  export LC_ALL="es_ES.ISO-8859-15"
  export LANG="es_ES.ISO-8859-15"
  export OUTPUT_CHARSET="ISO-8859-15"
  export PATH=$PATH:"/cygdrive/c/Archivos de programa/TortoiseSVN/bin"
  export PROJECTS_FOLDER='/cygdrive/d/Proyectos'

  # colorful shell
  export LESS="-erX"
fi
