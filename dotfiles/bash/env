export EDITOR='/usr/bin/mate -w'
export PROJECTS_FOLDER=$HOME/Projects

# Adding an appropriate PATH variable for use with MacPorts.
export PATH=/opt/local/bin:/opt/local/sbin:$PATH

# Adding an appropriate MANPATH variable for use with MacPorts.
export MANPATH=/opt/local/share/man:$MANPATH

# svn upgrade
export PATH=/opt/subversion/bin:$PATH

export PATH=~/bin:$PATH:/usr/local/mysql/bin

# Cygwin customizations and walkarounds
if [ $_YAP_CYGWIN ]; then
  # cygwin settings
  export LC_ALL="es_ES.ISO-8859-15"
  export LANG="es_ES.ISO-8859-15"
  export OUTPUT_CHARSET="ISO-8859-15"
  export PATH=$PATH:"/cygdrive/c/Archivos de programa/TortoiseSVN/bin"
  export PROJECTS_FOLDER='/cygdrive/d/Proyectos'
  
  # colorful shell
  export LESS="-erX"
fi
