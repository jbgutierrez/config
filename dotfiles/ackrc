# Always sort the files
--sort-files

# Always color, even if piping to a another program
--color

# Use "less -r" as my pager
--pager=less -r

# Custom extensions
--type-add=css=.sass,.scss
--type-add=ruby=.haml,.builder,.rake
# --type-set=html=.ascx,.aspx,.Master
--type-set=markdown=.markdown,.md,.mdown
--type-set=cucumber=.feature
--type-set=actionscript=.as

# Ignored dirs and files
--ignore-dir=.ideas
--ignore-dir=.sass-cache
--ignore-dir=bower_components
--ignore-dir=components
--ignore-dir=node_modules
--ignore-dir=vendor
--ignore-file=is:tags
